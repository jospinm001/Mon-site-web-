<script>
function goPage2(){
  let name = document.getElementById("name").value;
  if(name.trim()!==""){
    localStorage.setItem("bettyName", name);
    document.getElementById("page1").style.display="none";
    document.getElementById("page2").style.display="block";
  } else {
    alert("Écris ton nom d'abord !");
  }
}
function goPage3(){
  document.getElementById("page2").style.display="none";
  document.getElementById("page3").style.display="block";
}
function goPage4(){
  document.getElementById("page3").style.display="none";
  document.getElementById("page4").style.display="block";
  // Ajout de ballons aléatoires
  for(let i=0;i<10;i++){
    let balloon=document.createElement("div");
    balloon.className="balloon";
    balloon.style.left=(10+Math.random()*80)+"%";
    balloon.style.background="pink";
    balloon.style.height="50px";
    balloon.style.borderRadius="50%";
    document.getElementById("page4").appendChild(balloon);
  }
}
function goPage5(){
  document.getElementById("page4").style.display="none";
  document.getElementById("page5").style.display="block";
}
function closePage(){ alert("D'accord 😢, à bientôt !"); window.close();}
</script>

